<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patron">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="65dp"
        android:layout_height="61dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/inglaterra3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textCambioIdioma"
        android:layout_width="351dp"
        android:layout_height="62dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:text="@string/Cambio_de_Idioma"
        android:textColor="#F478A2"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnespañol"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="207dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FCE4EC"
        android:text="@string/Español"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textCambioIdioma" />

    <Button
        android:id="@+id/btningles"
        style="?attr/materialIconButtonFilledTonalStyle"
        android:layout_width="207dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FCE4EC"
        android:text="@string/Inglés"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/btnespañol" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="61dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCambioIdioma"
        android:src="@drawable/espana" />
</androidx.constraintlayout.widget.ConstraintLayout>
